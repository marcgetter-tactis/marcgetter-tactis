{{ attach_library('usdoj_sharing/usdoj_sharing') }}

<div{{ attributes }}>

    <div class="usdoj-sharing">
        <a id="usdoj-sharing-toggle" tabindex="0" title="Choose a social sharing platform">
            Share
          <span class="toggle-icon"><img src="/themes/custom/usdoj_uswds/assets/img/angle-arrow-right-white.svg" alt="" width="12" height="12" /></span>
        </a>
        <ul>
            <li>
                <a href="http://www.facebook.com/sharer/sharer.php?u={{ url }}" target="_blank" title="Share on Facebook" data-event-label="Share on Facebook">Facebook</a>
            </li>
            <li>
                <a href="http://twitter.com/intent/tweet?url={{ url }}&amp;text={{ title }}" target="_blank" title="Share on Twitter" data-event-label="Share on Twitter">Twitter</a>
            </li>
            <li>
                <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{ url }}&amp;title={{ title }}" target="_blank" title="Share on LinkedIn" data-event-label="Share on LinkedIn">LinkedIn</a>
            </li>
            <li>
                <a href="http://digg.com/submit?url={{ url }}&amp;title={{ title }}" target="_blank" title="Share on Digg" data-event-label="Share on Digg">Digg</a>
            </li>
            <li>
                <a href="http://reddit.com/submit?url={{ url }}&amp;title={{ title }}" target="_blank" title="Share on Reddit" data-event-label="Share on Reddit">Reddit</a>
            </li>
            <li>
                <a href="http://pinterest.com/pin/create/button/?url={{ url }}&amp;media=https%3A//www.justice.gov/sites/all/modules/features/doj_sharing/images/doj-seal-pin.png&amp;title={{ title }}" target="_blank" title="Share on Pinterest" data-event-label="Share on Pinterest">Pinterest</a>
            </li>
            <li>
                <a href="mailto:?body={{ url }}&subject={{ title }}" title="Email" data-event-label="Email">Email</a>
            </li>
        </ul>
    </div>

</div>
