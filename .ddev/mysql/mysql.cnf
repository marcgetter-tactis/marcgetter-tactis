[mysqld]
innodb_log_file_size           = 128M
innodb_buffer_pool_instances   = 1
query_cache_limit              = 128M
query_cache_min_res_unit       = 8192
query_cache_type               = 0
query_cache_size               = 0
join_buffer_size               = 8M
